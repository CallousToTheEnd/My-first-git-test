<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lk.progressbar.MainActivity" >

    
    
    <ProgressBar
        android:id="@+id/firstProgressBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:max="100"
        style="?android:attr/progressBarStyleHorizontal" />
    
    <Button
        android:id="@+id/firstButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第一个按钮"
        android:layout_below="@id/firstProgressBar"/>
    
    <Button
        android:id="@+id/secondButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第二个按钮"
        android:layout_below="@id/firstProgressBar"
        android:layout_toRightOf="@id/firstButton"/>
    
    <SeekBar
        android:id="@+id/firstSeekBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/firstButton"
        android:max="100" />
    
    <RatingBar
        android:id="@+id/firstRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/firstSeekBar"
        android:stepSize="0.5"
        android:numStars="5" />
    
    <TextView
        android:id="@+id/seekBarAndRatinggBarValue"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/firstRatingBar" />"
        
    <TextView
        android:id="@+id/runnableTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seekBarAndRatinggBarValue" />
   
    <Button
        android:id="@+id/startRunnable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/runnableTextView"
        android:text="开始线程" />"
    
    <Button
        android:id="@+id/stopRunnable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/runnableTextView"
        android:layout_toRightOf="@id/startRunnable"
        android:text="结束线程" />"
</RelativeLayout>
